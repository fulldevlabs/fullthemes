---
import { CtaSection, Deck, HeroSection, Layout } from '@fulldevlabs/fullui/src'
import { getCollection } from 'astro:content'

const reviews = await getCollection('reviews')
const services = await getCollection('services')
---

<Layout>
  <HeroSection
    frame="screen"
    heading="Enhancing outdoor spaces with creativity, quality craftsmanship, and exceptional customer service."
    tagline="Fresh Moves Landscaping"
    text="With a passion for transforming ordinary landscapes into stunning outdoor retreats, our team brings expertise and attention to detail to every project, big or small."
    image={{ src: '/test.jpg' }}
    buttons={[
      {
        variant: 'primary',
        text: 'FullUI',
        href: '#',
      },
      {
        variant: 'secondary',
        text: 'Read more',
        href: '#',
      },
    ]}
  />

  <CtaSection
    heading="Invite a friend and both of you will get"
    frame="panel"
    align="stretch"
    text="one-time free Lawn Care and Maintenance when they sign up!"
    buttons={[{ text: 'Browse products', href: '#' }]}
  />

  <Deck
    layout="carousel"
    frame="panel"
    cards={reviews}
  />

  <CtaSection
    heading="High quality products"
    frame="panel"
    align="stretch"
    text="All of our products are of the highest quality, while maintaining a competetive price, shop our selection today!"
    buttons={[{ text: 'Look around', href: '#' }]}
  />

  <Deck
    layout="grid"
    frame="panel"
    href="/template/services"
    cards={services}
  />

  <CtaSection
    frame="panel"
    heading="Sign up for our emails"
    text="Prefer to read and/or receive our blog posts in your inbox? Sign up here!"
    buttons={[{ text: 'Sign up', href: '#' }]}
  />
</Layout>
