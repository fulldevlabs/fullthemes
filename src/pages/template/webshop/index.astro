---
import { CtaSection, Deck, HeroSection, Layout } from '@fulldevlabs/fullui/src'
import { getCollection } from 'astro:content'

const reviews = await getCollection('reviews')
const products = await getCollection('products')
---

<Layout>
  <HeroSection
    heading="Embark on a Journey to Tomorrow with NovaSphere Innovations"
    tagline="NovaSphere Innovations"
    text="We specialize in creating cutting-edge products that redefine the boundaries of convenience, efficiency, and style, all while enhancing the everyday lives of our customers."
    buttons={[
      {
        variant: 'primary',
        text: 'FullUI',
        href: '#',
      },
      {
        variant: 'secondary',
        text: 'Read more',
        href: '#',
      },
    ]}
  />

  <Deck
    class="bg-black"
    frame="fill"
    cards={[
      {
        image: { src: '/samsung-white.webp' },
      },
      {
        image: { src: '/samsung-white.webp' },
      },
      {
        image: { src: '/samsung-white.webp' },
      },
      {
        image: { src: '/samsung-white.webp' },
      },
      {
        image: { src: '/samsung-white.webp' },
      },
    ]}
  />

  <CtaSection
    frame="panel"
    align="stretch"
    heading="Use code FULLTHEMES30 and"
    text="get a 30% discount on all products."
    buttons={[{ text: 'Browse products', href: '#' }]}
  />

  <Deck
    frame="panel"
    cards={reviews}
  />

  <CtaSection
    frame="panel"
    order="reverse"
    align="stretch"
    heading="High quality products"
    text="All of our products are of the highest quality, while maintaining a competetive price, shop our selection today!"
    buttons={[{ text: 'Look around', href: '#' }]}
  />

  <Deck
    frame="panel"
    layout="grid"
    cards={products}
  />

  <CtaSection
    frame="panel"
    align="stretch"
    heading="Sign up for our emails"
    text="Prefer to read and/or receive our blog posts in your inbox? Sign up here!"
    buttons={[{ text: 'Sign up', href: '#' }]}
  />
</Layout>
